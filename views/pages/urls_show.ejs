<!-- views/pages/url_shows.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/_head %>
</head>
<body>

<header>
  <% include ../partials/_header %>
</header>

<h2 style="margin:50px;">Your TinyURL Management Page</h2>

<main style="margin:150px;">


  <h4>Your current details:  <%= URLId %> --- <%= longURL %></h4>

  <form action="/urls" method="POST" style="margin:25px;">
    <label for="longURL">Update your full URL here:</label>
    <input id="longURL" type="text" name="longURL" placeholder="e.g. http://yourUpdatedURL" style="width: 300px;">
    <input type="submit" value="Update">
  </form>
</main>
</body>
</html>